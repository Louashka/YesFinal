<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:isScrollContainer="false"
    tools:context="com.tataev.yes.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:background="@drawable/registration_background"
        android:gravity="center_vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background_middle"
            android:gravity="center_vertical"
            android:layout_weight="0.35">

            <EditText
                android:id="@+id/editProfLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/login_icon"
                android:hint="@string/login"
                android:textColorHint="@color/profile_text"
                android:background="@drawable/profile_border"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^*()-=+_№;:?'/\~&lt;&amp;&gt;&quot;"/>

            <EditText
                android:id="@+id/editProfPswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/secure"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColorHint="@color/profile_text"
                android:background="@drawable/profile_border"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^*()-=+_№;:?'/\~&lt;&amp;&gt;&quot;"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <EditText
                    android:id="@+id/editProfCode"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/code"
                    android:singleLine="true"
                    android:textColorHint="@color/profile_text"
                    android:background="@drawable/profile_border"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"/>

                <TextView
                    android:id="@+id/textCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/profile_text"
                    android:background="@drawable/profile_border"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <TextView
                android:id="@+id/textRefreshImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/refresh_image"
                android:textSize="10sp"
                android:textColor="@color/refresh_image"
                android:layout_marginRight="60dp"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp" />

            <TextView
                android:id="@+id/textRemPswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forget_pswd"
                android:textColor="@color/profile_text"
                android:textSize="12sp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <Button
                    android:id="@+id/buttonReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:text="@string/registration"
                    android:background="@drawable/profile_button"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/buttonEnter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:text="@string/entry"
                    android:background="@drawable/profile_button"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
