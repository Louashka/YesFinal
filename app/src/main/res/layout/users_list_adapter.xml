<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/users_list_selector"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageUsersAva"
        android:layout_margin="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/usersName"
        android:layout_toRightOf="@+id/imageUsersAva"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usersBasket"
        android:layout_toLeftOf="@+id/usersLike"
        android:src="@drawable/basket"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:maxHeight="45dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usersLike"
        android:layout_toLeftOf="@+id/usersStatus"
        android:layout_alignParentRight="true"
        android:src="@drawable/like"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:maxHeight="45dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usersStatus"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        style="@style/RadioButtonAppTheme"
        android:enabled="false"
        android:visibility="gone" />
</RelativeLayout>