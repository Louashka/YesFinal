<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/imageViewTopForMan" />

    <TextView
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSearchResultTitle"
        android:text="Title"
        android:id="@+id/textViewTitle"

        android:layout_toRightOf="@+id/imageViewTopForMan"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price"
        android:id="@+id/textViewPrice"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_alignRight="@+id/textViewFreeDeliver"
        android:layout_alignEnd="@+id/textViewFreeDeliver" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last Price"
        android:id="@+id/textViewLastPrice"
        android:layout_below="@+id/textViewPrice"
        android:layout_alignLeft="@+id/textViewPrice"
        android:layout_alignRight="@+id/textViewTitle"
        android:layout_alignEnd="@+id/textViewTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-30%"
        android:id="@+id/textViewDiscount"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:layout_toRightOf="@+id/imageViewTopForMan"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Акция"
        android:id="@+id/textViewAction"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:layout_toRightOf="@+id/textViewDiscount"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewTime"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:layout_toRightOf="@+id/textViewAction"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="70dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Бесплатная доставка"
        android:id="@+id/textViewFreeDeliver"
        android:layout_below="@+id/textViewAction"
        android:layout_alignLeft="@+id/textViewDiscount"
        android:layout_alignStart="@+id/textViewDiscount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Бронь"
        android:id="@+id/textViewOrder"
        android:layout_below="@+id/textViewTime"
        android:layout_alignRight="@+id/textViewTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Продано"
        android:id="@+id/textViewNumOfSelled"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textViewOrder"
        android:layout_alignRight="@+id/textViewTime" />

</RelativeLayout>


